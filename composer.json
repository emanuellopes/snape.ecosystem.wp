{
	"name": "emanuellopes/snape.ecosystem.wp",
	"description": "Ecosystem Package to use in wordpress themes",
	"type": "library",
	"license": "MIT",
	"version": "1.0.2",
	"scripts": {
		"cs": [
			"./vendor/bin/phpcs -s"
		],
		"cs-fix": "./vendor/bin/phpcbf",
		"lint": [
			"@cs",
			"@phpstan"
		],
		"phpstan": "./vendor/bin/phpstan analyse --memory-limit=-1"
	},
	"autoload": {
		"psr-4": {
			"SampleThemeApp\\": "sample-theme/App",
			"Snape\\EcoSystemWP\\": "src/"
		}
	},
	"authors": [
		{
			"name": "Emanuel Lopes",
			"email": "emanuel.lopes.pt@gmail.com"
		}
	],
	"require": {
		"php": ">=8.1",
		"ext-json": "*",
		"league/container": "^4.2",
		"league/config": "^1.1",
		"htmlburger/carbon-fields": "^3.3",
		"timber/timber": "^2.0.0-rc.1",
		"stoutlogic/acf-builder": "^1.12",
		"symfony/yaml": "^6.3"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
		"friendsofphp/php-cs-fixer": "^3.0.0",
		"johnpbloch/wordpress-core": "^6.2.2",
		"kint-php/kint": "^5.0.7",
		"phpstan/extension-installer": "^1.1",
		"phpstan/phpstan": "^1.3",
		"roave/security-advisories": "dev-master",
		"squizlabs/php_codesniffer": "^3.5",
		"slevomat/coding-standard": ">=7",
		"szepeviktor/phpstan-wordpress": "^1.0",
		"escapestudios/symfony2-coding-standard": "^3.12"
	},
	"archive": {
		"exclude": [
			"/_dev/*",
			".editorconfig",
			"/.gitignore",
			"/docker-compose.yml",
			"/phpcs.xml",
			"/phpstan.neon"
		]
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true
		}
	}
}
